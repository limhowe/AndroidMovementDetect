<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_gesture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quandary.quandary.AddGestureActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Gesture Sequence"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Select three gestures in sequence from the following list"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="@color/material_drawer_background"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum = "4">

                        <Button
                            android:id="@+id/btnGesture10"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="TAP"
                            android:tag="1010"/>

                        <Button
                            android:id="@+id/btnGesture11"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="CHOP"
                            android:tag="1011"/>

                        <Button
                            android:id="@+id/btnGesture12"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="ROLL"
                            android:tag="1012"/>

                        <Button
                            android:id="@+id/btnGesture13"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="SPIN"
                            android:tag="1013"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textStyle="bold"
                        android:textColor="@color/material_drawer_background"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum = "4">

                        <Button
                            android:id="@+id/btnGesture20"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="TAP"
                            android:tag="1020"/>

                        <Button
                            android:id="@+id/btnGesture21"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="CHOP"
                            android:tag="1021"/>

                        <Button
                            android:id="@+id/btnGesture22"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="ROLL"
                            android:tag="1022"/>

                        <Button
                            android:id="@+id/btnGesture23"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="SPIN"
                            android:tag="1023"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textStyle="bold"
                        android:textColor="@color/material_drawer_background"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum = "4">

                        <Button
                            android:id="@+id/btnGesture30"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="TAP"
                            android:tag="1030"/>

                        <Button
                            android:id="@+id/btnGesture31"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="CHOP"
                            android:tag="1031"/>

                        <Button
                            android:id="@+id/btnGesture32"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="ROLL"
                            android:tag="1032"/>

                        <Button
                            android:id="@+id/btnGesture33"
                            style="?attr/buttonStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gesture_button_margin"
                            android:background="@drawable/round_gesture_btn"
                            android:textColor="#FFFFFF"
                            android:text="SPIN"
                            android:tag="1033"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    style="?attr/buttonStyle"
                    android:id="@+id/sendButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/btn_add_gesture"
                    android:textColor="#FFFFFF"
                    android:text="That's it. Add this combination."/>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
