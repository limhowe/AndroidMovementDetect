<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/material_drawer_icon"
        android:layout_width="@dimen/drawer_header_icon_width"
        android:layout_height="@dimen/drawer_header_icon_height"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/fliiik"
        android:background="@drawable/round_corner_header_icon"
        android:paddingBottom="@dimen/drawer_header_icon_padding"
        android:paddingEnd="@dimen/drawer_header_icon_padding"
        android:paddingLeft="@dimen/drawer_header_icon_padding"
        android:paddingRight="@dimen/drawer_header_icon_padding"
        android:paddingStart="@dimen/drawer_header_icon_padding"
        android:paddingTop="@dimen/drawer_header_icon_padding"

        android:layout_marginLeft="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/drawer_header_text"
        android:layout_gravity="center"
        android:text="Fliiik"
        android:textColor="@color/material_drawer_primary_text"
        android:layout_marginLeft="20dp"/>

</LinearLayout>